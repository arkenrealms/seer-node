{
  "compilerOptions": {
    "module": "CommonJS",
    "preserveSymlinks": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "strictNullChecks": false,
    "outDir": "./dist",
    "baseUrl": ".",
    "types": ["node", "jest"],
    "paths": {
      "~/*": ["./src/*"]
    },
    "target": "ESNext",
    "lib": ["ESNext"],
    "moduleResolution": "Node"
  },
  "include": ["./src/**/*"],
  "exclude": []
}
